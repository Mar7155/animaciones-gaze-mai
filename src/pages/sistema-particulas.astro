<!doctype html>
<html>
  <head>
    <script src="https://aframe.io/releases/1.7.1/aframe.min.js"></script>
    <script src="https://unpkg.com/@c-frame/aframe-particle-system-component@1.2.x/dist/aframe-particle-system-component.min.js"></script>
  </head>
  <body>
    <a-scene fog="type: exponential; color: #222; density: 0.05">
      <a-sky color="#111"></a-sky>

      <a-entity particle-system="preset: rain" opacitiy="1" position="0 0 -10"></a-entity>

      <a-light type="ambient" color="#fffce0" intensity="0.5"></a-light>

      <a-plane
        position="0 0 0"
        rotation="-90 0 0"
        width="100"
        height="100"
        color="#5a6778"
        src="https://raw.githubusercontent.com/aframevr/sample-assets/master/assets/images/noise/noise.png"
        repeat="50 50"
      ></a-plane>

      <a-plane
        position="0 4 0"
        rotation="90 0 0"
        width="100"
        height="100"
        color="#d1d1d1"
        src="https://raw.githubusercontent.com/aframevr/sample-assets/master/assets/images/noise/noise.png"
        repeat="40 40"
      ></a-plane>

      <a-box
        position="-4 2 -10"
        width="0.2"
        height="4"
        depth="40"
        color="#e2e2c7"
      ></a-box>
      <a-box
        position="4 2 -10"
        width="0.2"
        height="4"
        depth="40"
        color="#e2e2c7"
      ></a-box>

      <a-entity position="0 3.9 -5">
        <a-box width="1" height="0.1" depth="2" color="#fff"></a-box>
        <a-light
          type="point"
          intensity="0.4"
          distance="10"
          color="#fff"
        ></a-light>
      </a-entity>

      <a-entity position="0 3.9 -15">
        <a-box width="1" height="0.1" depth="2" color="#fff"></a-box>
        <a-light
          type="point"
          intensity="0.4"
          distance="10"
          color="#fff"
        ></a-light>
      </a-entity>

      <a-entity position="0 3.9 -25">
        <a-box width="1" height="0.1" depth="2" color="#fff"></a-box>
        <a-light type="point" intensity="0.2" distance="10" color="#fff">
          <a-animation
            attribute="intensity"
            from="0.2"
            to="0"
            dur="100"
            repeat="indefinite"
            direction="alternate"
          ></a-animation>
        </a-light>
      </a-entity>

      <a-entity position="-3.5 0 -8">
        <a-box
          position="0 0.5 0"
          width="2"
          height="1"
          depth="1"
          color="#8b5a2b"
        ></a-box>
        <a-box
          position="0 1.4 0"
          width="0.8"
          height="0.8"
          depth="0.8"
          color="#dcdcdc"
        ></a-box>
        <a-plane
          position="0 1.4 0.41"
          width="0.6"
          height="0.6"
          color="#00ff00"
          material="emissive: #00ff00; emissiveIntensity: 0.5"
        ></a-plane>
      </a-entity>
    </a-scene>
  </body>
</html>
